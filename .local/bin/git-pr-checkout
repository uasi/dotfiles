#!/usr/bin/env perl

use v5.26;
use warnings;

sub get_pr_number {
    my $url = `osascript -e 'tell application "Google Chrome" to return URL of active tab of front window' 2>/dev/null`;
    $url =~ m{/pull/(\d+)(?:[/?#]|$)};
    $1;
}

exec qw(hub pr checkout), @ARGV if $ARGV[0];

my $number = get_pr_number
    or die 'error: no pull request number found in the frontmost browser window';

exec qw(hub pr checkout), $number;
